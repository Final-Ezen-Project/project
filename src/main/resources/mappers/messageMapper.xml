<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.www.repository.MessageMapper">
    <insert id="insertMessage">
        INSERT INTO message (chat_room_id, sender_id, receiver_id, content, timestamp)
        VALUES (#{chatRoomId}, #{senderId}, #{receiverId}, #{content}, NOW())
    </insert>

    <select id="getMessagesByChatRoomId" resultType="com.project.www.domain.MessageVO">
        SELECT * FROM message WHERE chat_room_id = #{chatRoomId}
    </select>

    <delete id="deleteMessagesByChatRoomId">
        DELETE FROM message WHERE chat_room_id = #{chatRoomId}
    </delete>
</mapper>