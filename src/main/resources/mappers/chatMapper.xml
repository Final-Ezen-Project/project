<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.www.repository.ChatMapper">

    <insert id="insertMessage" parameterType="com.project.www.domain.ChatMessageVO">
        INSERT INTO chat_messages (sender, content, chat_room_id, sender_type)
        VALUES (#{sender}, #{content}, #{chatRoomId}, #{senderType})
    </insert>

    <select id="getMessagesByRoomId" parameterType="String" resultType="com.project.www.domain.ChatMessageVO">
        SELECT * FROM chat_messages WHERE chat_room_id = #{chatRoomId}
    </select>

    <delete id="deleteMessagesByRoomId" parameterType="String">
        DELETE FROM chat_messages WHERE chat_room_id = #{chatRoomId}
    </delete>

    <insert id="createChatRoom" parameterType="com.project.www.domain.ChatRoomVO">
        INSERT INTO chat_rooms (chat_room_id, seller_id, customer_id)
        VALUES (#{chatRoomId}, #{sellerId}, #{customerId})
    </insert>

    <select id="getChatRoomById" parameterType="String" resultType="com.project.www.domain.ChatRoomVO">
        SELECT * FROM chat_rooms WHERE chat_room_id = #{chatRoomId}
    </select>

    <delete id="deleteChatRoomById" parameterType="String">
        DELETE FROM chat_rooms WHERE chat_room_id = #{chatRoomId}
    </delete>

</mapper>